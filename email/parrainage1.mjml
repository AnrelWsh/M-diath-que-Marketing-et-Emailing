<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="Segoe UI"></mj-all>
      <mj-text font-size="20px" color="#1C1C1C" line-height="32px" padding-top="20px"></mj-text>
    </mj-attributes>
    <mj-style>
    .logo{
      margin: 20px auto;
    }
      .button {
        background-color: #6C37AE;
        border-radius: 30px;
        display: inline-block;
        font-size: 20px;
        padding: 20px;
        margin: 20px 100px;
      }
      .button:hover {
        background-color: #9152E2;
      }
      .image{
        filter: grayscale(50%);
      }
      .image-text {
        position: absolute;
        top:32%;
        left:50%;
        transform:translate(-50%, -50%);
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
      }
    </mj-style>
    <mj-title>Parrainez un ami et recevez un E-book gratuit !</mj-title>
  </mj-head>
  <mj-body background-color="#fff">
    <mj-section>
      <mj-column>
    <mj-image src="https://mediatheque-marskuu.vercel.app/src/images/big-logo.png" alt="Logo de la médiathèque" css-class="logo" align="center"/>
    <mj-hero mode="fixed-height" height="300px" background-url="https://www.trbimg.com/img-5bff2842/turbine/la-1543448638-tgcvmvoeoc-snap-image/1200">
      <mj-text align="center" color="#fff" css-class="image-text" font-size="30px"> Parrainez un ami et recevez un E-book gratuit !</mj-text>
      </mj-hero>
        <mj-text>
          Cher(e) [nom du client],
        </mj-text>
